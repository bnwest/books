    <h1 data-depth="1" id="gd-idp4288880">Laws of Exponents</h1>
      <p class="para" id="gd-idp3112544">
        <math xmlns="http://www.w3.org/1998/Math/MathML">
          <semantics>
            <mrow>
              <msup>
                <mi>x</mi>
                <mi>a</mi>
              </msup>
              <mspace width="0"></mspace>
              <msup>
                <mi>x</mi>
                <mi>b</mi>
              </msup>
              <mo lspace="0.278em" rspace="0.278em">=</mo>
              <msup>
                <mi>x</mi>
                <mrow>
                  <mi>a</mi>
                  <mo lspace="0" rspace="0">+</mo>
                  <mi>b</mi>
                </mrow>
              </msup>
            </mrow>
            <annotation encoding="math/tex">{x}^{a}{x}^{b}={x}^{a+b}</annotation>
          </semantics>
        </math>
